:css
  #filter-div button {
    margin-top: 4px;
    margin-left: 4px;
  }

= form_tag funding_templates_path, :id => 'filter_form', :method => "get", :class => 'navbar-form navbar-right panel-action', style: 'padding-top: 1px' do
  #filter-div
    .form-group
      = select_tag(:funding_source_id, options_for_select(FundingSource.active.collect{|a| [a.name, a.id]}, :selected => @funding_source_id), :class => "form-control", :style => "width: 150px;", :prompt => "Any Program...")
    .form-group
      %label
        = check_box_tag(:show_active_only, '1', @show_active_only, {:class => "form-control"})
        Show Active Programs Only

    = button_tag :class => 'btn btn-default pull-right', :type => 'submit' do
      %i.fa.fa-filter
