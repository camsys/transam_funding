%ul.nav.nav-tabs
  %li
    %a{:href => "#asst", :data =>{:toggle => 'tab'}}
      %span.badge.pull-right= @activity_line_item.assets.count
      = "Assets"
  %li
    %a{:href => "#cost", :data =>{:toggle => 'tab'}}
      = "Cost Justification"
  %li
    %a{:href => "#fund", :data =>{:toggle => 'tab'}}
      %span.badge.pull-right= @activity_line_item.funding_requests.count
      = "Funding"
  %li
    %a{:href => "#docs", :data =>{:toggle => 'tab'}}
      %span.badge.pull-right= @activity_line_item.documents.count
      = "Supporting Documents "
  %li
    %a{:href => "#comm", :data =>{:toggle => 'tab'}}
      %span.badge.pull-right= @activity_line_item.comments.count
      = "Comments"

.tab-content
  .tab-pane.fade#asst
    .tab-content
      = render 'assets'
  .tab-pane.fade#cost
    .tab-content
      = render 'cost_justification'
  .tab-pane.fade#fund
    .tab-content
      = render 'funding_requests/funding_requests_index'
  .tab-pane.fade#docs
    .tab-content
      = render 'documents'
  .tab-pane.fade#comm
    .tab-content
      = render 'comments'
