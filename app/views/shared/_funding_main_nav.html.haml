%li{:class => get_nav_link_class(['funding'])}
  = link_to "#", :class => "dropdown-toggle", :data => {"toggle" => "dropdown"}, :title => 'Funding' do
    %i.fa.fa-usd.fa-2x
    %b.caret
  %ul.dropdown-menu.columns-3
    .row
      .col-sm-4
        %ul.multi-column-dropdown
          %li.text-left
            = link_to funding_sources_path, :style => 'font-weight:bold;' do
              %i.fa.fa-book.fa-fw
              Funding Programs
          - FundingSource.all.each do |program|
            %li.text-left
              = link_to funding_source_path(program) do
                %i.fa.fa-fw.fa-book
                = program
          - if can? :create, FundingSource
            %li.divider
            %li
              = link_to new_funding_source_path do
                %i.fa.fa-plus.fa-fw
                = "Add Funding Program";
      .col-sm-4
        %ul.multi-column-dropdown
          - if can? :read, FundingTemplate
            %li.text-left
              = link_to funding_templates_path do
                %i.fa.fa-fw.fa-tag
                = ' Templates'

            %li.text-left
              = link_to funding_buckets_path do
                %i.fa.fa-fw.fa-legal
                = ' Buckets'

            %li.divider

          %li.text-left
            = link_to my_funds_funding_buckets_path do
              %i.fa.fa-fw.fa-usd
              = 'My Funds'
      .col-sm-4
        %ul.multi-column-dropdown
          - if @organization_list.count == 1
            %li.text-left
              = link_to scheduler_index_path(org_id: @organization_list.first) do
                %i.fa.fa-fw.fa-calendar
                Funding Projects
          - else
            %li.text-left
              = link_to '#', :style => 'font-weight:bold;' do
                %i.fa.fa-calendar.fa-fw
                Funding Projects

            - Organization.where(id: @organization_list).each do |org|
              %li.text-left
                = link_to scheduler_index_path(org_id: org.id) do
                  %i.fa.fa-fw.fa-calendar
                  = org.short_name
