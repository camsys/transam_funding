- orgs = @funding_template.get_organizations
- funding_requests = FundingRequest.where('federal_funding_line_item_id = ? OR state_funding_line_item_id = ? OR local_funding_line_item_id = ?', @funding_bucket.id, @funding_bucket.id, @funding_bucket.id)

%ul.nav.nav-tabs
  - if @funding_template.owner == FundingSourceType.find_by(name: 'State')
    %li
      %a{:href => "#elgby", :data =>{:toggle => 'tab'}}
        %span{:style => 'white-space: nowrap !important;'}
          Eligiblity
          %span.badge= orgs.count
  %li
    %a{:href => "#tagged", :data =>{:toggle => 'tab'}}
      %span{:style => 'white-space: nowrap !important;'}
        Funding Line Items
        %span.badge= funding_requests.count

.tab-content{:style => 'max-height:400px;overflow-y: auto;'}
  - if @funding_template.owner == FundingSourceType.find_by(name: 'State')
    .tab-pane.fade#elgby
      .tab-content
        - if @funding_template.query_string.present?
          = format_field("Agencies", QueryParam.find_by(class_name: 'FundingTemplate', query_string: @funding_template.query_string).to_s)
        = render :partial => 'organizations/index_table', :locals => {:organizations => orgs, :show_actions => 0}

  .tab-pane.fade#tagged
    .tab-content
      = render :partial => 'funding_requests/index_table', :locals => {:funding_requests => funding_requests, :show_actions => 0, :show_footer => 0}

